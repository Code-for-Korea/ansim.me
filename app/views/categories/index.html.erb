<section class="container my-4">
  <p id="notice"><%= notice %></p>

  <h1>분류</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>분류명</th>
        <th>분류키</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.description %></td>
          <td><%= category.name %></td>
          <td>
            <%= link_to '수정', edit_category_path(category), class: "mr-1" %>
            <%= link_to '삭제', category, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '분류 추가', new_category_path %>
</section>